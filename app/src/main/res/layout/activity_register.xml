<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/appbackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorBrownOpacity"
            android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הרשמה"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:fontFamily="@font/anka"
            android:id="@+id/texview"/>


        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="20"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/colorBrownOpacity"
        android:gravity="center">

        <EditText
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:hint="כתובת מייל"
            android:id="@+id/etName"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/edittextshape"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorPrimary"/>

        <EditText
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="@drawable/edittextshape"
            android:padding="15sp"
            android:hint="סיסמה"
            android:singleLine="true"
            android:gravity="center"
            android:id="@+id/etPassword"
            android:inputType="numberPassword"
            android:textSize="15sp"
            android:textColorHint="@color/colorPrimary"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:hint="שם מלא"
            android:id="@+id/etFullName"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/edittextshape"
            android:textColorHint="@color/colorPrimary"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:padding="15sp"
            android:background="@drawable/edittextshape"
            android:hint="תאריך לידה"
            android:id="@+id/etDateOfBirth"
            android:inputType="datetime"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="15sp"
            android:textColorHint="@color/colorPrimary"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btCity"
            android:text="בחר עיר"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonshape"
            android:shadowRadius="5"/>

        <EditText
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:hint="מספר טלפון"
            android:id="@+id/etPhoneNumber"
            android:inputType="phone"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:background="@drawable/edittextshape"
            android:textSize="15sp"
            android:textColorHint="@color/colorPrimary"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorBrownOpacity"
        android:layout_weight="3">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="הירשם"
            android:textColor="@color/colorPrimary"
            android:onClick="register"
            android:fontFamily="@font/anka"/>

    </LinearLayout>



</LinearLayout>
